[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    venv,
    env
per-file-ignores =
    # Allow imports not at top of file in this file:
    app.py:E402
# Ignore some common warnings
ignore =
    # Line too long (already handled by max-line-length)
    E501,
    # Line break before binary operator
    W503
